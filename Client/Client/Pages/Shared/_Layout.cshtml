        var load = {
            on: () => document.getElementById("spinner").classList.add('show'),
            off: () => document.getElementById("spinner").classList.remove('show')
        }
app.checklogin = async () => {
    var token = getCookie("Token");
    if (token == "") {
        return app.login = false;
    } else {
       load.on();
        try {
            var checkacc = await fetchurl.get(UrlApi + UrlLogin + '?user=' + token);
            if (checkacc.Status == "Error") {
                alert("Tài Khoản k tồn tại");
                document.getElementById("spinner").classList.remove('show');
                return app.login = false;
            } else {
                var time = new Date().getTime();
                setCookie("UserID", checkacc.Message, time)
                return app.login = true

            }
        } catch (err) {
            console.log(err);
            alert("Không thể kết nối tới api");
            return app.login = false;
        }

    }
}
app.render = async () => {
    load.on();
    var time = new Date().getTime();
    if (!app.login) {
        document.querySelector('.main').classList.add("hide");
        document.querySelector('.login_class').classList.remove("hide");
        document.querySelector('.singup_class').classList.add("hide");
        setCookie("UserID", " ", time);
        setCookie("Token", " ", time);
        
        return load.off();
    } else {
        document.querySelector('.main').classList.remove("hide");
        document.querySelector('.login_class').classList.add("hide");
        document.querySelector('.singup_class').classList.add("hide");
        document.getElementById("spinner").classList.remove('show');
        app.dataUser = await fetchurl.get(UrlApi + UrlUser + "/" + getCookie("UserID"))
        $(".menu_setting").html(`
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                <img class="rounded-circle me-lg-2" src="${UrlApi + UrlImagerName + app.dataUser.avatar}" alt="" style="width: 40px; height: 40px;">
                <span class="d-none d-lg-inline-flex">${app.dataUser.name}</span>
            </a>
            <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                <a href="cau-hinh-tai-khoan"  class="dropdown-item">My Profile</a>
                <div  class="dropdown-item logout">Log Out</div>
            </div>
        `)
        return load.off();;
    }
}

app.handerevent = () => {
    var time = new Date().getTime();
    if (!app.login) {
        //đăng ký
        document.querySelector('.btn_sign_up').addEventListener('click', () => {
            document.querySelector('.login_class').classList.add("hide");
            document.querySelector('.singup_class').classList.remove("hide");
        })
        //đăng nhập
        document.querySelector('.btn_sign_in').addEventListener('click', () => {
            document.querySelector('.login_class').classList.remove("hide");
            document.querySelector('.singup_class').classList.add("hide");
        })
        //post đăng ký
        document.querySelector('#register').addEventListener('click', () => {
            var confirmationRePassword = $("#confirmationRePassword").val();
            var floatingRePassword = $("#floatingRePassword").val();
            if (confirmationRePassword !== floatingRePassword) return alert('Mat khau khong khop, vui long kiem tra lai!!!');

            var time = Date.now();
            var pwdmd5 = md5(md5(floatingRePassword));
            var token = md5($("#floatingReInput").val() + pwdmd5);
            return fetchurl.post(UrlApi + UrlUser, {
                "name": $("#floatingReText").val(),
                "password": pwdmd5,
                "avatar": "avatar.jpg",
                "isAdmin": false,
                "token": token,
                "phone": $("#floatingRephone").val(),
                "email": $("#floatingReInput").val(),
                "address": $("#floatingReAddress").val(),
            }, false, (loi, data) => {
                if (loi) {
                    alert("Trang web đang bảo trì !! Mong bạn vào lại vào hôm sau :3");
                    return location.reload();
                }

                if (data.Status == "Error" || data.errors) {
                    alert(data.message ? data.message : data.errors);
                    console.log(data)
                    return location.reload()
                }
                
                alert(data.Message)
                setCookie("Token", token, time)
                setCookie("UserID", token, time)
                return location.reload();
            })
        })
        //post đăng nhập
        document.querySelector('#login').addEventListener('click', () => {
            var Email = $("#floatingInput").val();
            var floatingRePassword = $("#floatingPassword").val();
            var time = Date.now();
            var pwdmd5 = md5(md5(floatingRePassword));
            var token = md5(Email + pwdmd5);
            setCookie("Token", token, time)
            return location.reload();
        })
    } else {
        document.querySelector('.logout').addEventListener('click', () => {
            setCookie("Token", " ", time)
            return location.reload();
        })
    }
}


app.start = async () => {
    await app.checklogin();
    await app.render();
    await app.handerevent();
    app.handercommands.forEach(a => a());
}


app.start();
    </script>
    
